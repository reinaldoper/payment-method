generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  document  String   @unique
  phone     String
  charges   Charge[]
}

model Charge {
  id             Int      @id @default(autoincrement())
  amount         Float
  currency       String
  method         PaymentMethod
  status         ChargeStatus @default(PENDING)
  dueDate        DateTime?    
  installments   Int?         
  pixKey         String?      
  qrCode         String?      
  customer       Customer     @relation(fields: [customerId], references: [id])
  customerId     Int
  idempotencyKey   String?  @unique
  createdAt      DateTime @default(now())
}


enum PaymentMethod {
  PIX
  CREDIT_CARD
  BOLETO
}

enum ChargeStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}
